{
  "manifest_version": 3,
  "name": "CheckMe",
  "version": "1.0",
  "description": "Check your public IP address and location instantly.",
  
  "action": {
  "default_icon": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "default_popup": "popup.html"
},
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
  
  "host_permissions": [
    "https://ipinfo.io/*"
  ]
}


